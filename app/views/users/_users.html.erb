<% if users.any? %>
  <ul class="media-list">
    <% users.each do |user| %>
      <li class="media">
        <div class="media-left">
          <% if user.image? %>
            <%= image_tag user.image.url %>
          <% else %>
            <%= image_tag 'noimage.gif' %>
          <% end %>
        </div>
        <div class="media-body">
          <h3 class="media-heading"><%= user.name %></h1>
          <%= user.info %>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>